<resources>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.Button</item>
    </style>

    <style name="AlertDialogTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- MDC ShapeAppearance -->

    <style name="ShapeAppearance.Round" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.Round.Top">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Round.Bottom" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

</resources>
