<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:interpolator="@android:interpolator/linear_out_slow_in"
    android:transitionOrdering="together">

    <transitionSet>
        <targets>
            <target android:targetId="@id/backgroundView" />
            <target android:targetId="@id/posterView" />
        </targets>
        <arcMotion />
        <changeBounds />
    </transitionSet>
    <transitionSet
        android:interpolator="@android:interpolator/decelerate_quint"
        android:startDelay="50">
        <targets>
            <target android:targetId="@id/ageBgView" />
            <target android:targetId="@id/newView" />
            <target android:targetId="@id/bestView" />
            <target android:targetId="@id/dDayView" />
        </targets>
        <arcMotion />
        <changeBounds />
    </transitionSet>

</transitionSet>
